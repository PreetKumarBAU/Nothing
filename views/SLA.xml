    <record model="ir.ui.view" id="sla_rule_form_view">
      <field name="name">SLA Rule </field>
      <field name="model">sla.rule</field>
         <field name="priority">1</field>
      <field name="arch" type="xml">
           <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sla_time"/>
                             <field name="warning"/>
                        </group>
                        <group>
                            <field name="project_task_category_id" string=" Task Category"/>
                            <field name="timesheet_type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- explicit Search view definition , Filter and GROUP BY -->
    <record model="ir.ui.view" id="sla_rule_search_view">
      <field name="name">SLA Rule Search View </field>
      <field name="model">sla.rule</field>
         <field name="priority">1</field>
      <field name="arch" type="xml">
      <search string="SLA Rule Type">
          <field name="name"/>
          <field name="project_task_category_id"/>
          <field name="timesheet_type"/>

  <!--  <filter name="name" string=" Project Task Categories" domain="[('name', '=', )]"/>-->
        <group expand="0" string="Group By">
            <filter string="SLA Rule " name="groupby_sla_rule" domain="[]" context="{'group_by': 'name'}"/>
        </group>

      </search>

      </field>
    </record>



    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="sla_rule_action_window">
      <field name="name"> SLA Rule Type</field>
      <field name="res_model">sla.rule</field>
      <field name="view_mode">tree,form,kanban</field>
        <field name="view_id" ref="sla_rule_tree_view"/>
        <field name="search_view_id" ref="sla_rule_search_view"/>
    </record>


